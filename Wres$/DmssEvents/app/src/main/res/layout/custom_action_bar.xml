<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:layout_gravity="fill_horizontal"
    android:background="@color/dmsOrange">

    <LinearLayout
        android:id="@+id/linearLActionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/actionBarBackImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:padding="13dp"
            android:src="@drawable/left_arrow"
            android:visibility="gone" />

        <TextView
            android:id="@+id/actionBarHeadingTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="Medium Text"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:visibility="visible" />

        <Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgCreateFolder"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:padding="3dp"
            android:src="@drawable/add_image_icon"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/imgReferesh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:src="@drawable/refresh"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:src="@drawable/profile1"
            android:layout_gravity="center"
            android:visibility="gone"
            android:padding="4dp"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/imageViewLogout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:src="@drawable/logoff"
            android:layout_gravity="center"
            android:visibility="gone"
            android:padding="4dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
</RelativeLayout>